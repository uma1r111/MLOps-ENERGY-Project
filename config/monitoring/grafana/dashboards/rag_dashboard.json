{
  "dashboard": {
    "title": "RAG System Monitoring",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Queries",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rag_queries_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Query Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(rag_queries_total{status='success'}[5m])) / sum(rate(rag_queries_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 3,
        "title": "Active Queries",
        "type": "stat",
        "targets": [
          {
            "expr": "rag_active_queries",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Total Tokens Used",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(llm_tokens_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Query Latency (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rag_query_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(rag_query_latency_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p50"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 6,
        "title": "Token Usage Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(llm_tokens_total{type='input'}[5m])",
            "refId": "A",
            "legendFormat": "Input"
          },
          {
            "expr": "rate(llm_tokens_total{type='output'}[5m])",
            "refId": "B",
            "legendFormat": "Output"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Estimated Cost",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(llm_cost_dollars_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 12},
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 6
          }
        }
      },
      {
        "id": 8,
        "title": "Guardrail Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(guardrail_violations_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 12}
      },
      {
        "id": 9,
        "title": "Retrieval Quality Scores",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(retrieval_quality_score_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 10,
        "title": "Query Status Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (rag_queries_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 11,
        "title": "Violations by Type",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (violation_type) (guardrail_violations_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}